{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run Main.py",
        "command": "${workspaceFolder}/.venv/bin/python",
        "args": [
            "${workspaceFolder}/main.py"
        ],
        "type": "shell",
        "problemMatcher": [],
        "presentation": {
            "reveal": "always"
        },
        "group": "build"
    },
    {
        "label": "Run Pytest",
        "command": "${workspaceFolder}/.venv/bin/pytest",
        "args": [
            "${workspaceFolder}/tests/"
        ],
        "type": "shell",
        "problemMatcher": [],
        "presentation": {
            "reveal": "always"
        },
        "group": {
            "kind": "test",
            "isDefault": true
        }
    }
]
}
